<section id="cart_items">
	<div class="container">
		<div>
			<ol class="breadcrumb">
			  <li><a href="/">Home</a></li>
			  <!-- Mudar pro nome do produto selecionado -->
			  <li><a href="/">@products.name</a></li>
			  <li class="active">Carrinho de Compras</li>
			</ol>
		</div>
		<div class="table-responsive cart_info">
			<table class="table table-condensed">
				<thead><b>
					<tr class="cart_menu" align="middle">
						<td class="image">ITEM</td>
						<td class="description"></td>
						<td class="price">PREÃ‡O</td>
						<td class="quantity">QUANTIDADE</td>
						<td class="total">TOTAL</td>
						<td></td>
					</tr>
				</b></thead>
				<tbody>
					<% @products.each do |product| %>
					<tr>
						<td class="cart_product" align="middle">
							<a><%= image_tag(product.image.url(:medium)) %></a>
						</td>
						<td class="cart_description">
							<h4><b><%= product.name %></b></h4>
							<p><%= product.code %></p>
						</td>
						<td class="cart_price" align="middle">
							<p><%= product.price %></p>
						</td>
						<td align="middle">
							<div>
								<button type="button" class="btn btn-danger btn-number glyphicon glyphicon-minus"  data-type="minus" data-field="quantity">
							    </button>
								<input min="1" max="100" type="number" id="quantity" name="quantity" value="1"/>
									<style>#quantity { padding:6px; width:60px; border: 1px solid #555; }</style>
								</input>
								<button type="button" class="btn btn-success btn-number glyphicon glyphicon-plus" data-type="plus" data-field="quantity">
							    </button>
							</div>
						</td>
						<td class="cart_total" align="middle">
							<p class="cart_total_price"><%= product.price %></p>
						</td>
						<td class="cart_delete">
							<a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</section> <!--/#cart_items-->