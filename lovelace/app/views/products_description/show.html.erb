<!DOCTYPE HTML>
<html>
<head>
<title><%= @product.name %></title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
<link href='http://fonts.googleapis.com/css?family=Maven+Pro:400,900,700,500' rel='stylesheet' type='text/css'>
<link href="/assets/style.css" rel="stylesheet" type="text/css" media="all" />
<!--- start-mmmenu-script-->
<script src="/assets/jquery.min.js" type="text/javascript"></script>
<link type="text/css" rel="stylesheet" href="/assets/jquery.mmenu.all.css" />
<script type="text/javascript" src="/assets/jquery.mmenu.js"></script>
    <script type="text/javascript">
      //  The menu on the left
      $(function() {
        $('nav#menu-left').mmenu();
      });
    </script>
<!-- start top_js_button -->
<script type="text/javascript" src="assets/easing.js"></script>
<script type="text/javascript" src="assets/move-top.js"></script>
   <script type="text/javascript">
    jQuery(document).ready(function($) {
      $(".scroll").click(function(event){   
        event.preventDefault();
        $('html,body').animate({scrollTop:$(this.hash).offset().top},1200);
      });
    });
  </script>
</head>
<body>
<!-- start header -->
<div class="top_bg">
  <div class="wrap">
    <div class="header">
      <div class="logo">
        <a href="/"><img src="/assets/lovelace-logo2.png"/></a>
      </div>
      <div class="log_reg">
        <ul>
          <li><a href="/sign_in">Entrar</a> </li>
          <span class="log">  </span>
          <li><a href="/users/sign_up">Cadastrar</a> </li>                   
          <div class="clear"></div>
        </ul>
      </div>  
      <div class="web_search">
        <form>
          <input type="text" value="" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}">
          <input type="submit" value=" " />
        </form>
        </div>            
      <div class="clear"></div>
    </div>  
  </div>
</div>

<!-- start header_btm -->
<div class="wrap">
  <div class="header_btm">
    <div class="menu">
      <ul>          
        <li><a href="/products_catalog">Catálogo de Produtos</a></li>
        <li><a href="/request">Meus pedidos</a></li>
        <li><a href="/services">Serviços</a></li>
        <li><a href="/services">FAQ</a></li>
        <li><a href="/contact">Fale Conosco</a></li>
      </ul>
    </div>
    <div class="header_right">
      <ul>
        <li><a href="#"><i  class="cart"></i><span>0</span></a></li>
      </ul>
    </div>
    <div class="clear"></div>
  </div>
</div>
<!-- start main -->
<div class="main_bg">
	<div class="wrap">
		<div class="main">
			<!-- start content -->
			<div class="single">
				<!-- start span1_of_1 -->
				<div class="left_content">
					<div class="span1_of_1">
						<!-- start product_slider -->
						<div class="product-view">
						    <div class="product-essential">
						        <div class="product-img-box">
						    		<div class="more-views">
				        				<div class="more-views-container">
								        </div>
								    </div>
								    <div class="product-image"> 
								           	<%= image_tag @product.image.url(:medium) %>
								        </a>
								   </div>
								</div>
							</div>
						</div>
					<!-- end product_slider -->
					</div>
					<!-- start span1_of_1 -->
					<div class="span1_of_1_des">
				  		<div class="desc1">
				  			<p id="notice"><%= notice %></p>
							<h3><%= @product.name %></h3>
						</div>
						<p>(código: <%= @product.code %>)</p>
						<div class="desc1">
							<h5>R<%= number_to_currency(@product.price) %></h5>
							<div class="available">
								<div class="btn_form">
									<form>
										<%= button_to 'Adicionar ao carrinho', line_items_path(:product_id => @product) %>
									</form>
								</div>
							</div>
							<div class="clear"></div>
						</div>
			   	 	</div>
			   	</div>
			   	<div class="clear"></div>
			   	<!-- start left content_bottom -->
			   	<div class="left_content_btm">
					<!-- start tabs -->
				   	<section class="tabs">
				        <input id="tab-1" type="radio" name="radio-set" class="tab-selector-1" checked="checked">
				        <label for="tab-1" class="tab-label-1">Descrição</label>
					
				        <input id="tab-2" type="radio" name="radio-set" class="tab-selector-2">
				        <label for="tab-2" class="tab-label-2">Ficha Técnica</label>

				        <input id="tab-3" type="radio" name="radio-set" class="tab-selector-3">
				        <label for="tab-3" class="tab-label-3">Avaliação dos Clientes</label>

					    <div class="clear-shadow"></div>
						
				        <div class="content">
					        <div class="content-1">
					        	<p class="para top"><%= @product.description %></p>
								<div class="clear"></div>
							</div>
					        <div class="content-2">
								<p class="para"><%= @product.details %></p>
							</div>
							<div class="content-3">
								<p class="para">Indisponível no momento.</p>
							</div>
				        </div>
					</section>
				<!-- end tabs -->
			   	</div>
			<!-- end left content_bottom -->
		   	</div>
	       	<div class="clear"></div>
		<!-- end content -->
		</div>
	</div>
</div>

<%= render 'footer' %>