<!-- start header -->
<div class="top_bg">
	<div class="wrap">
		<div class="header">
			<div class="logo">
				<a href="/"><img src="/assets/lovelace-logo2.png"/></a>
			</div>
			
			<div class="log_reg">
				<ul>
					<% if current_user %>
						<li><a href="../users/edit">Editar Perfil</a></li>
						<li><a href="../users/sign_out">Sair</a> </li>
					<% else %>
						<li><a href="../users/sign_in">Entrar</a> </li>
						<span class="log">  </span>
						<li><a href="../users/sign_up">Cadastrar</a> </li>								   
						<div class="clear"></div>
					<% end %>
				</ul>
			</div>	
			
			<div class="web_search">
				<%= form_tag products_path, :method => 'get' do %>
					<%= text_field_tag :search, params[:search] %>
				    <input type="submit" value=" " />
  				<% end %>
	    	</div>						
			<div class="clear"></div>
		</div>	
	</div>
</div>

