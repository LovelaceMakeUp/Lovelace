<b><p id="notice", class="alert alert-success"><%= notice %></p></font></b>

<div>
  <%= form_tag products_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  <% end %>
</div>

<div class="header clearfix">
  <nav>
    <ul class="nav nav-pills pull-left">
      <li><font face="Zapf Chancery"><h1 class="fixed-top">Produtos</h1></font></li>
    </ul>
    <ul class="nav nav-pills pull-right">
      <li><%= link_to ' Adicionar', new_product_path, class: "btn btn-success glyphicon glyphicon-plus" %></li>
    </ul>
  </nav>
</div>
<p></p><br>

<div class="row">
  <% @products.each do |product| %>
  <div class="col-lg-3">
      <p align="middle"><%= link_to image_tag(product.image.url(:medium)), product %></p>
      <b><p align="middle"><%= product.name %></p></b>
      <p align="middle"><%= product.code %></p>
  </div>
  <% end %>
</div>