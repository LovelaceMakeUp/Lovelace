<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
<link href='http://fonts.googleapis.com/css?family=Maven+Pro:400,900,700,500' rel='stylesheet' type='text/css'>
<link href="assets/style.css" rel="stylesheet" type="text/css" media="all" />
<!--- start-mmmenu-script---->
<script src="assets/jquery.min.js" type="text/javascript"></script>
<link type="text/css" rel="stylesheet" href="assets/jquery.mmenu.all.css" />
<script type="text/javascript" src="assets/jquery.mmenu.js"></script>
<script type="text/javascript">
	//	The menu on the left
	$(function() {
		$('nav#menu-left').mmenu();
	});
</script>

<!-- start slider -->
<link href="assets/slider.css" rel="stylesheet" type="text/css" media="all" />
<script type="text/javascript" src="assets/jquery.eislideshow.js"></script>
<script type="text/javascript" src="assets/easing.js"></script>
<script type="text/javascript">
    $(function() {
        $('#ei-slider').eislideshow({
					    animation			: 'center',
					    autoplay			: true,
					    slideshow_interval	: 3000,
					    titlesFactor		: 0
        });
    });
</script>

<!-- start top_js_button -->
<script type="text/javascript" src="assets/move-top.js"></script>
<script type="text/javascript">
	jQuery(document).ready(function($) {
		$(".scroll").click(function(event){		
	  			     event.preventDefault();
			$('html,body').animate({scrollTop:$(this.hash).offset().top},1200);
		});
	});
</script>
</head>
<body>
<!-- start header -->
<div class="top_bg">
	<div class="wrap">
		<div class="header">
			<div class="logo">
				<a href="/"><img src="assets/lovelace-logo2.png"/></a>
			</div>
			<div class="log_reg">

			<% if user_signed_in? %>
			  <ul>
			  	<li>Logged in as <strong><%= current_user.email %></strong>.</li>
				<span class = "log"></span>  
				<li><%= link_to 'Editar perfil', edit_user_registration_path, :class => 'navbar-link' %>
				<li><%= link_to "Sair", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
				</ul>
			<% else %>
			  <ul>
			  	<li><a href="<%= welcome_sign_up_path%>">Cadastrar</a> </li>
			  	<span class = "log"> </span>
			  	<li><a href="/sign_up">Cadastrar</a> </li>
			  	<div class="clear"></div>
				</ul>
			<% end %>
</div>
				
			<div class="web_search">
		 		<form>
					<input type="text" value="" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}">
					<input type="submit" value=" " />
				</form>
	    	</div>						
			<div class="clear"></div>
		</div>	
	</div>
</div>

<!-- start header_btm -->
<div class="wrap">
	<div class="header_btm">
		<div class="menu">
			<ul>					
				<li><a href="/listofproducts">Catálogo de Produtos</a></li>
				<li><a href="/request">Meus pedidos</a></li>
				<li><a href="/services">Serviços</a></li>
				<li><a href="/services">FAQ</a></li>
				<li><a href="/contact">Fale Conosco</a></li>
			</ul>
		</div>
		<div class="header_right">
			<ul>
				<li><a href="#"><i  class="cart"></i><span>0</span></a></li>
			</ul>
		</div>
		<div class="clear"></div>
	</div>
</div>

<%= yield %>
