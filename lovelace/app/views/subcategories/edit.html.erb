<%= form_for :subcategory, url: subcategory_path(@subcategory), method: :patch do |f| %>

  <% if @subcategory.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@subcategory.errors.count, "erro") %> foram encontrados:
      </h2>
      <ul>
        <% @subcategory.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
         <% end %>
       </ul>
    </div>
  <% end %>

  <div class="col-md-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        <b>Editar Subcategoria</b>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="form-group">
      <ul><%= f.label :name %></ul>
      <ul><%= f.text_field :name, :class=>"form-control"%></ul>
    </div>
  </div>

  <div class="col-md-9">
    <div class="form-group">
      <ul><%= f.label :description %></ul>
      <ul><%= f.text_area :description, :class=>"form-control", :rows=>"3"%></ul>
    </div>
  </div> 

  <div class="col-md-4">
    <div class="form-group">
      <ul><%= f.submit ' Salvar', class: "btn btn-success" %>
      <%= link_to ' Voltar', subcategories_path, class: "btn btn-info glyphicon glyphicon-repeat" %></ul>
    </div>
  </div>
 
<% end %>